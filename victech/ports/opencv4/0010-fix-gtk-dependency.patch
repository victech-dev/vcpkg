+# victech patch: load GTK from system only (detached from vcpkg)
+macro(_ocv_check_modules_system_only define)
+  if(DEFINED PKG_CONFIG_USE_CMAKE_PREFIX_PATH)
+    set(_PREV_PKG_CONFIG_USE_CMAKE_PREFIX_PATH ${PKG_CONFIG_USE_CMAKE_PREFIX_PATH})
+  endif()
+  set(PKG_CONFIG_USE_CMAKE_PREFIX_PATH OFF)
+  set(_PREV_CMAKE_FIND_ROOT_PATH ${CMAKE_FIND_ROOT_PATH})
+  set(CMAKE_FIND_ROOT_PATH "")
+  ocv_check_modules(${define} ${ARGN})
+  if(${define}_FOUND)
+    message(STATUS "  ${define}_INCLUDE_DIRS: ${${define}_INCLUDE_DIRS}")
+    message(STATUS "  ${define}_LIBRARIES: ${${define}_LIBRARIES}")
+  endif()
+  set(CMAKE_FIND_ROOT_PATH ${_PREV_CMAKE_FIND_ROOT_PATH})
+  if(DEFINED _PREV_PKG_CONFIG_USE_CMAKE_PREFIX_PATH)
+    set(PKG_CONFIG_USE_CMAKE_PREFIX_PATH ${_PREV_PKG_CONFIG_USE_CMAKE_PREFIX_PATH})
+    unset(_PREV_PKG_CONFIG_USE_CMAKE_PREFIX_PATH)
+  else()
+    unset(PKG_CONFIG_USE_CMAKE_PREFIX_PATH)
+  endif()
+endmacro()
+# victech patch: (end)
